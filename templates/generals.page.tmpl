{{ end }}

{{define "js"}}
<script>
  document
    .getElementById("check-availbility-button")
    .addEventListener("click", function () {
      let html = ` <div class="form-row">
    <div class="col">
      <div class="form-row" id="reservation-dates-modal">
        <div class="col">
          <input
            type="text"
            name="start"
            disabled
            required
            id="start"
            class="form-control"
            placeholder="Arrival"
          />
        </div>
        <div class="col">
          <input
            type="text"
            name="end"
            disabled
            required
            id="end"
            class="form-control"
            placeholder="Departure"
          />
        </div>
      </div>
    </div>
  </div>
</form>
      `;

      attention.custom({ msg: html, title: "Choose your dates" });
    });
</script>
{{ end }}
<form
  method="post"
  id="check-availability-form"
  novalidate
  class="needs-validation"
></form>
